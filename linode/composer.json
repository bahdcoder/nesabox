{
    "name": "bahdcoder/linode",
    "description": "A simple PHP wrapper around linode API",
    "keywords": [
        "bahdcoder",
        "linode"
    ],
    "homepage": "https://github.com/bahdcoder/linode",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Kati Frantz",
            "email": "bahdcoder@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Bahdcoder\\Linode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bahdcoder\\Linode\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
